#include <iostream>
#include <string>
using namespace std;

string palindrome(string a){
  a=string(a.rbegin(), a.rend());
  return a;
}

void newline(){
  cout<<endl;
}
int main(){
string b;
cout<<"Introduce the string "<<endl;
newline();
cin>>b;
cout<<"The reverse string equals to "<<palindrome(b)<<endl;
newline();
if(b==palindrome(b)){
  cout<<"The string is a palindrome "<<endl;
  newline();
}
else{
  cout<<"The string it is no palindrome "<<endl;
  newline();
}
return 0;
}
